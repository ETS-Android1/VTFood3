<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txvFoodName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/vang"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/den"
        android:textSize="20sp"
        android:paddingLeft="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/den"/>
    <TextView
        android:id="@+id/txvChangeFood"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/trang"
        android:gravity="center_vertical"
        android:text="Sửa thông tin món ăn"
        android:textStyle="bold"
        android:textColor="@color/den"
        android:textSize="20sp"
        android:paddingLeft="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/den"/>
    <TextView
        android:id="@+id/txvDeleteFood"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/trang"
        android:gravity="center_vertical"
        android:text="Xóa"
        android:textStyle="bold"
        android:textColor="@color/den"
        android:textSize="20sp"
        android:paddingLeft="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/den"/>
    <TextView
        android:id="@+id/txvOrderFood"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/trang"
        android:gravity="center_vertical"
        android:text="Đặt món"
        android:textStyle="bold"
        android:textColor="@color/den"
        android:textSize="20sp"
        android:paddingLeft="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/den"/>
    <TextView
        android:id="@+id/txvHistory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/trang"
        android:gravity="center_vertical"
        android:text="Lịch sử đặt món"
        android:textStyle="bold"
        android:textColor="@color/den"
        android:textSize="20sp"
        android:paddingLeft="5dp"/>

</LinearLayout>