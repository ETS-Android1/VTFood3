<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/vang"
        android:gravity="center"
        android:text="Chọn mục cần thêm"
        android:textStyle="bold"
        android:textColor="@color/den"
        android:textSize="20sp"
        android:paddingLeft="5dp"/>
<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/den"/>
    <TextView
        android:id="@+id/txvAddFood"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/trang"
        android:gravity="center_vertical"
        android:text="Thêm món ăn"
        android:textStyle="bold"
        android:textColor="@color/den"
        android:textSize="20sp"
        android:paddingLeft="5dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/den"/>
    <TextView
        android:id="@+id/txvAddTable"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/trang"
        android:gravity="center_vertical"
        android:text="Thêm bàn ăn"
        android:textStyle="bold"
        android:textColor="@color/den"
        android:textSize="20sp"
        android:paddingLeft="5dp"/>

</LinearLayout>