<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txvTenMonAn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="130dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/vang"
            android:background="@color/den"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txvLoaiDeal"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textColor="@color/den"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Specials"
            android:layout_alignParentRight="true"
            android:background="@color/vang"
            android:textSize="20sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Loại thức ăn"
                android:textColor="@color/den"
                android:textSize="15sp"
                android:background="@drawable/bg_edt"/>
            <TextView
                android:id="@+id/txvLoaiThucAn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Hải sản"
                android:textColor="@color/den"
                android:textSize="15sp"
                android:background="@drawable/bg_edt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Đơn giá"
                android:textColor="@color/den"
                android:textSize="15sp"
                android:background="@drawable/bg_edt"/>
            <TextView
                android:id="@+id/txvDonGia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="50.000"
                android:textColor="@color/den"
                android:textSize="15sp"
                android:background="@drawable/bg_edt"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>